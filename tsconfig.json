{
    "compilerOptions": {
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "lib": ["ES2022.Array", "ESNext"],
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": ["test/types/environment.d.ts"],
        "module": "CommonJS",
        "target": "ES2020",
        "sourceMap": false,
        "skipLibCheck": true,
        "strictPropertyInitialization": false,
        "declaration": true
    },
    "exclude": ["./src/**/*.test.ts", "./src/**/*.spec.ts", "vite.config.ts", "test/**/*.ts"]
}